\newcommand{\colorbar}[1][0]{%  Add optional parameter for vertical position
    \begin{tikzpicture}[remember picture,overlay]
        \node[anchor=center] at ($(current page.center)+(0,#1)$) {  % Use optional shift
            \begin{tikzpicture}
                % Light blue bar (10%)
                \fill[lightblue] (-0.5\paperwidth,0) rectangle (-0.4\paperwidth,0.2cm);
                % Dark blue bar (50%)
                \fill[mainblue] (-0.4\paperwidth,0) rectangle (0.1\paperwidth,0.2cm);
                % Yellow/Orange bar (10%)
                \fill[yellow] (0.1\paperwidth,0) rectangle (0.2\paperwidth,0.2cm);
                % Magenta bar (10%)
                \fill[magenta] (0.2\paperwidth,0) rectangle (0.3\paperwidth,0.2cm);
                % White bar (20%)
                \fill[white] (0.3\paperwidth,0) rectangle (0.5\paperwidth,0.2cm);
            \end{tikzpicture}
        };
    \end{tikzpicture}%
}

